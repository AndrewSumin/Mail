<?xml version="1.0" encoding="UTF-8"?>
<mail:doc xmlns:mail="http://dev.mail.ru/schema">
    <mail:import url="blocks/page.xml"/>
    <mail:set name="title">Почта Mail.ru, Список папок</mail:set>
    
    <mail:set name="page">
        <mail:choose>
            <mail:when test="$folders"><mail:get name="folders"/></mail>
            <mail:otherwise>Список папок пуст</mail:otherwise>
        </mail:choose>
    </mail:set>
    
    <mail:set name="folders">
        <ul>
            <mail:for-each name="$folders" iterator="folder" index="index">
                <li><mail:set value="$folder.name"/></li>
            </mail:for-each>
        </ul>
    </mail:set>
</mail:doc>
